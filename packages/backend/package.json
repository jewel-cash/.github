{
    "name": "backend",
    "private": true,
    "scripts": {
        "prebuild": "npm run swagger",
        "build": "tsc",
        "prestart": "npm run swagger",
        "start": "concurrently \"nodemon\" \"nodemon -x tsoa spec\"",
        "swagger": "tsoa spec",
        "lint": "eslint --ext .ts .",
        "lint:fix": "eslint --fix --ext .ts ."
    },
    "dependencies": {
        "cookie-parser": "^1.4.6",
        "core": "*",
        "debug": "^4.3.4",
        "dotenv": "^16.0.0",
        "express": "^4.18.1",
        "http-errors": "^2.0.0",
        "morgan": "^1.10.0",
        "swagger-ui-express": "^4.5.0",
        "tsoa": "^4.1.1"
    },
    "devDependencies": {
        "@types/cookie-parser": "^1.4.3",
        "@types/express": "^4.17.13",
        "@types/http-errors": "^1.8.2",
        "@types/morgan": "^1.9.3",
        "@types/node": "^18.6.4",
        "@types/swagger-jsdoc": "^6.0.1",
        "@types/swagger-ui-express": "^4.1.3",
        "@typescript-eslint/eslint-plugin": "^5.32.0",
        "@typescript-eslint/parser": "^5.32.0",
        "concurrently": "^7.3.0",
        "eslint": "^8.21.0",
        "nodemon": "^2.0.19",
        "ts-node": "^10.9.1"
    },
    "nodemonConfig": {
        "watch": [
            "src"
        ],
        "ext": "ts",
        "exec": "ts-node src/app.ts"
    }
}
