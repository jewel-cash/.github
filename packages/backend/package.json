{
    "name": "backend",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "tsoa spec-and-routes && tsc",
        "start": "nodemon -q -w src -e ts -x \"npm run build && node build/app.js\"",
        "test": "jest",
        "lint": "eslint --ext .ts .",
        "lint:fix": "eslint --fix --ext .ts ."
    },
    "dependencies": {
        "bignumber.js": "^9.1.0",
        "core": "*",
        "cors": "^2.8.5",
        "dotenv": "^16.0.0",
        "express": "^4.18.1",
        "firebase-admin": "^11.0.1",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^6.5.2",
        "morgan": "^1.10.0",
        "nanoid": "^4.0.0",
        "node-cron": "^3.0.2",
        "swagger-ui-express": "^4.5.0",
        "tsoa": "^4.1.1"
    },
    "eslintConfig": {
        "extends": "../../.eslintrc.json"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "moduleNameMapper": {
            "^(\\.{1,2}/.*)\\.js$": "$1",
            "^core$": "<rootDir>/../core/src/index"
        }
    }
}
