    },
    "dependencies": {
        "cookie-parser": "^1.4.6",
        "core": "*",
        "debug": "^4.3.4",
        "dotenv": "^16.0.0",
        "express": "^4.18.1",
        "morgan": "^1.10.0",
        "swagger-ui-express": "^4.5.0",
        "tsoa": "^4.1.1"
    },
    "eslintConfig": {
        "extends": "../../.eslintrc.json"
    },
    "nodemonConfig": {
        "watch": [ "src" ],
        "ext": "ts",
        "exec": "npm run build && node build/app.js"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node"
