{
    "name": "jewl-root",
    "private": true,
    "scripts": {
        "build": "nx run-many --target build",
        "start": "nx run-many --target start",
        "watch": "nodemon -q",
        "test": "node --experimental-vm-modules --no-warnings ./node_modules/jest/bin/jest.js -u",
        "lint": "eslint .",
        "deploy": "nx run-many --target deploy"
    },
    "devDependencies": {
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.15",
        "@types/express-slow-down": "^1.3.2",
        "@types/jest": "^29.2.5",
        "@types/morgan": "^1.9.4",
        "@types/node": "^18.11.18",
        "@types/node-fetch": "^2.6.2",
        "@types/react": "^18.0.26",
        "@types/react-dom": "^18.0.10",
        "@types/react-test-renderer": "^18.0.0",
        "@types/swagger-jsdoc": "^6.0.1",
        "@types/swagger-ui-express": "^4.1.3",
        "@typescript-eslint/eslint-plugin": "^5.48.0",
        "@typescript-eslint/parser": "^5.48.0",
        "dotenv": "^16.0.3",
        "eslint": "^8.31.0",
        "eslint-plugin-react": "^7.31.11",
        "jest": "^29.3.1",
        "nodemon": "^2.0.20",
        "nx": "15.4.5",
        "react-test-renderer": "^18.2.0",
        "serve": "^14.1.2",
        "ts-jest": "^29.0.3",
        "typescript": "^4.9.4"
    },
    "workspaces": [
        "api",
        "core",
        "lambda",
        "web"
    ],
    "nodemonConfig": {
        "watch": [
            "api/src",
            "pcore/src",
            "lambda/src",
            "web/src"
        ],
        "ext": "*",
        "exec": "npm run start"
    },
    "jest": {
        "preset": "ts-jest/presets/default-esm",
        "moduleNameMapper": {
            "^(\\.{1,2}/.*)\\.js$": "$1",
            "^.*\\.(css|less|sass|scss)$": "identity-obj-proxy",
            "^jewl-core$": "<rootDir>/core/src/index"
        }
    }
}
